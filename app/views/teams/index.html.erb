<div class='ui segment center aligned'>
  <h1 class='blue'>List of all Teams:</h1>
  <div class='ui center aligned segment'>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
        <tr>
          <td><%= link_to 'Join', team %></td>
          <td><%= team.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class='ui segment'>
<%= link_to 'New Team', new_team_path %>
</div>